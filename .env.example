# ==============================================
# QUIKPAY PROJECT ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================

# Private key for deployment (WITHOUT 0x prefix)
# ⚠️  CRITICAL: Keep this secret and secure!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Push Chain Testnet RPC URLs
PUSH_TESTNET_RPC_URL=https://evm.rpc-testnet-donut-node1.push.org/
PUSH_TESTNET_RPC_URL_BACKUP=https://evm.rpc-testnet-donut-node2.push.org/

# Push Chain Mainnet RPC URLs (Coming Soon)
PUSH_MAINNET_RPC_URL=https://evm.rpc-mainnet.push.org/
PUSH_MAINNET_RPC_URL_BACKUP=https://evm.rpc-mainnet.push.org/

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Deployed QuikPay contract address on Push Chain Testnet
QUIKPAY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ==============================================
# EXPLORER & VERIFICATION
# ==============================================

# Blockscout API Key (Push Chain Testnet/Mainnet) for verification
BLOCKSCOUT_API_KEY=your_blockscout_api_key_here

# Push Chain explorer URLs
PUSH_TESTNET_EXPLORER_URL=https://donut.push.network
PUSH_MAINNET_EXPLORER_URL=https://explorer.push.network

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Web app configuration
NEXT_PUBLIC_CHAIN_ID=42101
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_RPC_URL=https://evm.rpc-testnet-donut-node1.push.org/

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here


# Optional: Frontend RPC URL override used by viem/wagmi
RPC_URL=https://evm.rpc-testnet-donut-node1.push.org/

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Gas settings for deployment
GAS_LIMIT=2000000
MAX_FEE_PER_GAS=20000000000
MAX_PRIORITY_FEE_PER_GAS=1000000000

# Test account addresses (optional)
TEST_ACCOUNT_1=0x...
TEST_ACCOUNT_2=0x...

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# Alchemy API Key (alternative RPC provider)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (alternative RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
